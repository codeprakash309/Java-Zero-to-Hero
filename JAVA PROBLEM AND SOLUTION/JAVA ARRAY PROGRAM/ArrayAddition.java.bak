class ArrayAddition 
{
	public static void main(String[] args) 
	{
		int arr[][]=new int[][]{{1,2,3,2},{4,5,6,7},{8,9,0,1},{2,3,4,5}};
		System.out.println("Array length "+arr.length);
		int x=5;
		System.out.println("before the 2d array element are : ");
		for(int i=0;i<arr.length;i++)
		{
			for(int j=0;j<arr.length;j++)
			{
           System.out.print(" "+arr[i][j]);
			}
			System.out.println();
		}
		System.out.println("add 5 to first row only in the given Array element : ");
    for(int i=0;i<arr.length;i++)
		{
			for(int j=0;j<arr.length;j++)
			{
				if(i<=j)
				{
                arr[i][j]=arr[i][j]+x;
				}
           	}
	   } //outer for loop ends
     System.out.println("after adding 5 into first row in the 2d array element are : ");
		for(int i=0;i<arr.length;i++)
		{
			for(int j=0;j<arr.length;j++)
			{
           System.out.print(" "+arr[i][j]);
			}
			System.out.println();
		}
	}
}
